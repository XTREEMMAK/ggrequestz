# =================================
# GG Requestz Configuration
# Copy this file to .env and update with your values
# =================================

# =================================
# DOCKER USER/GROUP IDS (for proper file permissions)
# =================================
PUID=1000
PGID=1000
TZ=America/New_York

# =================================
# REQUIRED CONFIGURATION
# =================================

# Public Site URL (used for API documentation and external links)
# Include protocol (http:// or https://) and domain/port
PUBLIC_SITE_URL=http://localhost:3000

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ggrequestz
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme123

# Authentication Method (choose: authentik or basic)
AUTH_METHOD=basic

# Authentik OIDC (only required if AUTH_METHOD=authentik)
AUTHENTIK_CLIENT_ID=your_authentik_client_id
AUTHENTIK_CLIENT_SECRET=your_authentik_client_secret
AUTHENTIK_ISSUER=https://auth.yourdomain.com/application/o/ggrequestz

# Session Secret (generate a random 64-character string for production)
SESSION_SECRET=your_random_session_secret_here_64_chars_minimum_for_production

# IGDB API Credentials (required for game data)
# Get these from: https://dev.twitch.tv/console
IGDB_CLIENT_ID=your_igdb_client_id
IGDB_CLIENT_SECRET=your_igdb_client_secret

# =================================
# OPTIONAL SERVICES
# =================================

# Redis Cache (recommended for production)
REDIS_URL=redis://redis:6379
REDIS_EXTERNAL_PORT=6385
REDIS_MAX_MEMORY=512mb

# Gotify Push Notifications (optional)
GOTIFY_URL=https://gotify.yourdomain.com
GOTIFY_TOKEN=your_gotify_token

# ROMM Game Library Integration (optional)
ROMM_SERVER_URL=https://romm.yourdomain.com
ROMM_USERNAME=your_romm_username
ROMM_PASSWORD=your_romm_password

# n8n Workflow Automation (optional)
# N8N_WEBHOOK_URL=https://n8n.yourdomain.com/webhook/game-request

# =================================
# DOCKER CONFIGURATION
# =================================

# External Port Mapping (change if ports conflict)
APP_PORT=3000
POSTGRES_EXTERNAL_PORT=5435
GOTIFY_EXTERNAL_PORT=8080

# PM2 Process Management (max = use all CPU cores)
PM2_INSTANCES=max

# =================================
# ADVANCED OPTIONS (use with caution)
# =================================

# Database Reset - WARNING: This will delete all data!
# RESET_DATABASE=true

# Traefik Proxy Configuration (if using proxy profile)
# ACME_EMAIL=admin@example.com